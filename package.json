{
  "name": "veetdocs",
  "displayName": "Veetdocs",
  "description": "Convert code to documentation and flowcharts",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "author": {
    "name": "Victor Oluwatosin",
    "email": "victorogunwehin@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProgViki/veetdocs"
  },
  "categories": ["Extension Packs", "Formatters"],
  "keywords": ["documentation", "markdown", "flowchart", "code", "export"],
  "publisher": "vikitechsolutions",
  "license": "MIT",
  "icon": "media/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
        {
        "command": "veetdocs.convertFile",
        "title": "Convert File to Documentation",
        "category": "VeetDocs"
      },
      {
        "command": "veetdocs.convertFolder",
        "title": "Convert Folder to Documentation",
        "category": "VeetDocs"
      }
    ]
  },
   "menus": {
      "explorer/context": [
        {
          "command": "veetdocs.convertFile",
          "when": "resourceLangId != null",
          "group": "navigation"
        },
        {
          "command": "veetdocs.convertFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.6",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "html-pdf": "^3.0.1",
    "markdown-it": "^14.1.0"
  }
}
